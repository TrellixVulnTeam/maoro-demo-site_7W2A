      inset 0 0 .5rem $darkergreen,
      0 0 2rem $darkergreen,
      inset 0 0 2rem $darkergreen,
      0 0 4rem $darkergreen,
      inset 0 0 4rem $darkergreen;
    }

    20%, 24%, 55% {
      text-shadow: none;
      box-shadow: none;
    }
  }
